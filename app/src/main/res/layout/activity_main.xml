<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/textTextLabelInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLabalInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="46dp" android:layout_marginStart="46dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="171dp"/>
    <TextView
            android:text="@string/textTextLabelOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLabelOutput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="46dp" android:layout_marginStart="46dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textLabalInput"/>
    <Button
            android:text="@string/textBtnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSend" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp" android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/textLabelOutput"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/textTextOutput"
            android:ems="10"
            android:id="@+id/textOutput" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textInput"
            app:layout_constraintStart_toEndOf="@+id/textLabelOutput" android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/textTextInput"
            android:ems="10"
            android:id="@+id/textInput"
            app:layout_constraintStart_toEndOf="@+id/textLabalInput" android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp" android:layout_marginTop="145dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>